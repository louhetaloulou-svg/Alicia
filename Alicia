<script>
function yes() {
  document.getElementById("question").style.display = "none";
  document.getElementById("result").style.display = "block";
}

function moveNo() {
  const btn = document.getElementById("noBtn");

  const x = Math.random() * 250;
  const y = Math.random() * 150;

  btn.style.left = x + "px";
  btn.style.top = y + "px";
}
